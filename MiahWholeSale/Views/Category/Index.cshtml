@model IEnumerable<ModelClasses.Category>

<div class="PaddingAll">
    <div class="row m-3">
        <div class="col-lg-7 col-md-5 com-sm-12">
            <h2 class="text-primary">Category List</h2>
            <hr/>
        </div>
        <div class="col-lg-5 col-md-7 com-sm-12">
            <a asp-action="Upsert" asp-controller="Category" class="btn btn-primary" >Create New Category</a>
        </div>
    </div>
    <div class="paddingAllWhite">
        <div class="row">
            <div class="col">
                @if(Model.Count() > 0)
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th asp-for="Id">ID</th>
                            <th class="Name">Name</th>
                            <th></th>
                        </tr>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="row ">
                                        <div class="col-lg-4 col-md-4 col-sm-12">
                                         <a asp-action="Upsert" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary form-control">Edit</a>
                                         </div>
                                         <div class="col-lg-4 col-md-4 col-sm-12">
                                             <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Name" class="btn btn-danger form-control">Delete</a>
                                         </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>
@section Script {
    <!-- Your custom script or partial here -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
